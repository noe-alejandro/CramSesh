        <div id="createDeckContainer">
          <div class="col-md-9">
            <div class="starter-template">
              <h1>Create a deck of cards</h1>
            </div>
              <div class="text-center col-md-4 col-md-offset-4">
                <form method="POST" class="form" action="/createdeck">
                  <div class="form-group">
                    <label class="lead" for="deckName">Enter deck name:</label>
                    <input id="deckName" class="form-control" type="text" name="deckName" placeholder="Subject">
                  </div>
                  <div class="form-group">
                    <label class="lead" for="selectCoverPhoto">Select A Cover Style:</label>
                    <select id="selectCoverPhoto" class="form-control" name="selectCoverPhoto">
                      <option disabled>Blank Flashcard (disabled)</option>
                      <option>English</option>
                      <option disabled>Science (disabled)</option>
                      <option>Mathematics</option>
                      <option disabled>History (disabled)</option>
                      <option disabled>Upload Your Own Cover ... Coming Soon :)</option>
                    </select>
                  </div>
                  <div id="uploadArea" class="form-group"></div>
                  <div class="form-group">
                    <input id="createDeck" type="submit" class="btn btn-primary btn-lg btn-block" value="Create Deck">
                  </div>
                </form>
              </div>
            </div>


        </div>

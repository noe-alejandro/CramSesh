<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="flashcard-application">
    <meta name="author" content="noerojas">

    <title>Cram-Sesh</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="css/assets/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/starter-template.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Cram-Sesh</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <% if(user && typeof user !== 'undefined') { %>
                  <li><a href="/dashboard">Dashboard</a></li>
            <% }
               else { %>
                  <li><a href="/users/register">Register</a></li>
            <% } %>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <% if(user && typeof user !== 'undefined') { %>
              <form class="navbar-form navbar-right" method="get" action="/logout">
                <button type="submit" class="btn btn-success">Logout</button>
              </form>
          <%}
             else { %>
              <form class="navbar-form navbar-right" method="post" action="/users/login">
                <div class="form-group">
                  <input type="text" placeholder="Username" class="form-control" name="username">
                </div>
                <div class="form-group">
                  <input type="password" placeholder="Password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-success">Login</button>
              </form>
          <%} %>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <main>
      <!-- <div id="createDeckContainer" class="container">
        <div class="starter-template">
          <h1>Create a Deck of Cards</h1>
          <label class="lead">Enter the deck name:<br>
            <input type="text" class="form-control" placeholder="Subject" aria-describedby="sizing-addon2">
          </label>
        </div>
      </div>
      -->
      <div id="createDeckContainer">
        <div class="container">
          <div class="starter-template">
            <h1>Create a deck of cards</h1>
          </div>
        </div>
        <div class="container container-table">
          <div class="row vertical-center-row">
            <div class="text-center col-md-4 col-md-offset-4">

              <form method="POST" class="form" action="/createdeck">
                <div class="form-group">
                  <label class="lead">Enter deck name:</label>
                  <input class="form-control" type="text" name="deckName" placeholder="Subject">
                </div>
                <div class="form-group">
                  <input id="createDeck" type="submit" class="btn btn-primary btn-lg btn-block" value="Create Deck">
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>

    </main>
    <script
      src="https://code.jquery.com/jquery-3.1.1.js"
      integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
      crossorigin="anonymous">
    </script>
    <script src="js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="js/assets/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="flashcard-application">
    <meta name="author" content="noerojas">

    <title>CramSesh</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="css/assets/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/starter-template.css" rel="stylesheet">
    <link href="css/createflashcards-style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Cram-Sesh</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <form class="navbar-form navbar-right" method="get" action="/logout">
            <button type="submit" class="btn btn-success">Logout</button>
          </form>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <main>
      <div id="createDeckContainer">
        <div class="container">
          <div class="starter-template">
            <h1>Create Your Flashcard</h1>
          </div>
        </div>
        <div class="container container-table">
          <div class="row vertical-center-row">
            <div class="text-center col-md-6 col-md-offset-3">

              <% if(typeof deck_msg !== 'undefined' && deck_msg.length > 0) { %>
                  <div class="alert alert-success fade in"><%=deck_msg%></div>
              <%}%>
              <div id="numberOfFlashcards"></div>
            </div>

            <!-- Disply only when the user wants to create a new flashcards. -->
            <div class="text-center col-md-6 col-md-offset-3">

              <div id="newCard">
                <br>
                <span id="newCardText">Create New Card?</span>&nbsp;&nbsp;
                <input id="continue" class="btn btn-primary" type="submit" value="Yes">&nbsp;&nbsp;
                <a href="/dashboard" class="btn btn-primary" role="button">No</a>
              </div>

              <div id="insertCardInfo">
                <div class="form-group">
                  <label>Front Information:</label>
                  <textarea id="frontarea" rows="11" class="form-control" type="text" name="front" placeholder="Front"></textarea>
                </div>
                <div class="form-group">
                  <label>Back Information:</label>
                  <textarea id="backarea" rows="11" class="form-control" type="text" name="back" placeholder="Back"></textarea>
                </div>
                <div class="form-group">
                  <input id="createFlashcard" type="submit" class="btn btn-primary btn-lg" value="Create Flashcard">
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </main>
    <script
      src="https://code.jquery.com/jquery-3.1.1.js"
      integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
      crossorigin="anonymous">
    </script>
    <script src="js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="js/assets/ie10-viewport-bug-workaround.js"></script>
    <script src="js/createflashcards.js"></script>
  </body>
</html>
